# this config is generated, see cookbooks/play-perl/templates/default/dancer-config.yml.erb
appname: "Play"
layout: "main"
charset: "UTF-8"
template: "simple"

session: "MongoDB"
mongodb_session_db: "play"
mongodb_session_coll: "sessions"

serializer: JSON

hostport: "<%= @hostport %>"

plugins:
  "Auth::Twitter":
    consumer_key:     "<%= @twitter['consumer_key'] %>"
    consumer_secret:  "<%= @twitter['consumer_secret'] %>"
    callback_url:     "http://<%= @hostport %>/auth/twitter/callback"
    callback_success: "/auth/twitter"
    callback_fail:    "/fail"
	
  "Auth::Github":
    client_id:     "<%= @github['client_id'] %>"
    client_secret:  "<%= @github['client_secret'] %>"
    github_auth_success: "http://<%= @hostport %>/auth/github"
    github_auth_success:    "http://<%= @hostport %>/fail"
