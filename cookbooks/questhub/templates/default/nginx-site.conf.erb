log_format qh_log_format<%= @dev ? '_dev' : '' %>
    '$remote_addr [$time_local] '
    '"$request" $status $body_bytes_sent '
    '"$http_referer" "$http_user_agent" '
    '$request_time $upstream_response_time $pipe';

server {

# test

  <% if @dev %>
  listen       <%= @port %>;
  server_name localhost;
  <% elsif @ssl %>
  listen 443 ssl;
  server_name <%= @host %>;

  ssl_prefer_server_ciphers on;
  ssl_protocols             TLSv1 TLSv1.1 TLSv1.2;
  ssl_ciphers 'EDH+CAMELLIA:EDH+aRSA:EECDH+aRSA+AESGCM:EECDH+aRSA+SHA384:EECDH+aRSA+S
  HA256:EECDH:+CAMELLIA256:+AES256:+CAMELLIA128:+AES128:+SSLv3:!aNULL:!eNULL:!LOW:!
  3DES:!MD5:!EXP:!PSK:!DSS:!RC4:!SEED:!ECDSA:CAMELLIA256-SHA:AES256-SHA:CAMELLIA128-
  SHA:AES128-SHA';
  ssl_stapling              on;
  ssl_stapling_verify       on;
  ssl_trusted_certificate   /data/ssl/PositiveSSLCA2.crt;

  ssl_dhparam               /data/ssl/dhparam_4096.pem;

  ssl_certificate           /data/ssl/questhub_io.crt;
  ssl_certificate_key       /data/ssl/questhub.key;
  <% else %>
  listen       <%= @port %>;
  server_name <%= @host %>;
  <% end %>

  <% if @dev %>
  # Turn sendfile off because it behaves bad with vboxsf
  sendfile off;
  <% end %>

  gzip             on;
  gzip_min_length  1000;
  gzip_types text/css text/javascript application/x-javascript application/json;

  access_log /data/access.log qh_log_format<%= @dev ? '_dev' : '' %>;
  error_log  /data/error.log info;

  location /api {
    try_files $uri @proxy;
    access_log off;
    expires 0;
  }

  location /blog {
    try_files $uri @proxy;
    access_log off;
    expires 0;
  }

  location /auth {
    try_files $uri @proxy;
    access_log off;
    expires 0;
  }

  location @proxy {
    proxy_set_header Host $http_host;
    proxy_set_header X-Forwarded-Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_pass       http://127.0.0.1:<%= @dancer_port %>;
  }

  location / {
    proxy_set_header X-Forwarded-Host localhost;
    if ($args ~ "_escaped_fragment_=$") {
        rewrite ^(.*) /seo$1 break;
        proxy_pass       http://127.0.0.1:<%= @dancer_port %>;
    }

    root <%= @static_root %>;

    expires 0;
    add_header        Cache-Control private;
    try_files $uri /index.html;
  }
}

<% if not @dev and @ssl %>
server {
    listen 80;
    server_name <%= @host %>;

    return 301 https://<%= @host %>$request_uri;
}

server {
  listen       80;
  server_name www.<%= @host %>;

  return 301 https://<%= @host %>$request_uri;
}
<% end %>
