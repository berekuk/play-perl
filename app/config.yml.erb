appname: "Play"
charset: "UTF-8"
template: "template_toolkit"

session: "MongoDB"
session_expires: "10d"
mongodb_host: "mongo"
mongodb_session_db: "play"
mongodb_session_coll: "sessions"

serializer: JSON

hostport: "<%= ENV['QH_HOST'] %>:<%= ENV['QH_PORT'] %>"
service_name: Questhub.io

<% if ENV['QH_DEV'] == '0' %>
environment: production
<% elsif ENV['QH_DEV'] == '1' %>
environment: development
<% else %>
<% throw 'oops' %>
<% end %>

plugins:
  "Auth::Twitter":
    consumer_key:     "<%= ENV['TWITTER_CONSUMER_KEY'] %>"
    consumer_secret:  "<%= ENV['TWITTER_CONSUMER_SECRET'] %>"
    callback_url:     "http://<%= ENV['QH_HOST'] %>:<%= ENV['QH_PORT'] %>/auth/twitter/callback"
    callback_success: "/auth/twitter"
    callback_fail:    "/fail"
